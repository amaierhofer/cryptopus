!!! Strict
%html{ html_attrs('en-us') }
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html'}
    %title Cryptopus
    %link{:rel => "shortcut icon", :href => "/favicon.png", :type => "image/png"}
    = stylesheet_link_tag 'cryptopus'
    = stylesheet_link_tag 'main_navigation'
    = javascript_include_tag 'defaults'

  %body
    #container
      #header
        %h1= link_to 'Cryptopus', '/'
      - if session[:uid]
        -# 
          %div#countdownWrapper
            Autologoff: 
              %span 000

      #user-navigation
        %ul
          %li.first hello 
          %li world
          -# render :partial => 'layouts/navigation'
        .clear

      #main-navigation
        %ul
          %li.first= link_to 'Dashboard', '/dashboard'
          %li= link_to 'Music', '/music'
          %li= link_to 'Movies', '/movies'
          %li= link_to 'Software', '/software'
        .clear

      #wrapper
        #main
          - if flash[:notice]
            .notice.flash-messages.fade-and-hide
              p= flash[:notice]
          - if flash[:error]
            .error.flash-messages.fade-and-hide
              p= flash[:error]

          = yield

        #sidebar
          -# = render :partial => 'layout/sidebar'
        .clear

      #footer
        .block
          %p Cryptopus bla bla bla
