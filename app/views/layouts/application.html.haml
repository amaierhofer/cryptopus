!!! XML
!!! Strict
%html{ html_attrs('en-us') }
  %head
    %title Cryptopus
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html'}
    %link{:rel => 'shortcut icon', :href => '/favicon.png', :type => 'image/png'}
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'themes/djime-cerulean/style.css'
    = javascript_include_tag 'defaults'
  %body
    #container
      - if session[:uid]
        #header
          %h1= link_to 'Cryptopus', '/'
          #user-navigation
            %ul
              %li= link_to '', ''
              %li= link_to 'Logout', '/login/logout'
            .clear
          #main-navigation
            %ul
              %li.first= link_to 'Teams', teams_path
              %li= link_to 'Search', new_search_path
            .clear
        #wrapper
          #main
            - if flash[:notice]
              .notice.flash-messages.fade-and-hide
                p= flash[:notice]
            - if flash[:error]
              .error.flash-messages.fade-and-hide
                p= flash[:error]
            = yield
            #footer
              .block
                %p Cryptopus bla bla bla
          #sidebar
            = render :partial => 'layouts/sidebar'
          .clear
      - else
        = yield
