.block
  .secondary-navigation
    = render :partial => 'tabs'
    .clear
  .content
    %h2 Search results

%table
  - for account in @accounts do
    - group = account.group
    - team = group.team

    %tr{ :class => cycle('odd', 'even') }
      %td= link_to image_tag( "encrypted_small.png" ) + " " + account.accountname, [team, group, account]
      %td= account.description
      %td= link_to image_tag("edit.png"), [:edit, team, group, account]
      %td= link_to image_tag("remove.png"), [team, group, account], :confirm => 'Are you sure?', :method => :delete
