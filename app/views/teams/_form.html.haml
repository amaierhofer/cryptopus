- form_for @team, :html => {:class => 'form'} do |f|
  .flash
    .message.error
      %p= f.error_messages
  .columns
    .column.left
      .group
        = f.label :name, nil, {:class => 'label'}
        = f.text_field :name, {:class => 'text_field'}
      .group
        = f.label :description, nil, {:class => 'label'}
        = f.text_area :description, :cols => 80, :rows => 5, :class => 'text_area'
    .column.right
      .group
        %label.label Settings
        %div
          = f.check_box :private
          = tooltip 'Private', {:tooltip => 'Admins don\'t have access to this team'}, :class => 'mytooltip'
        %div
          = f.check_box :noroot
          = tooltip "No Root", {:tooltip => 'NOT EVEN ROOT CAN RESTORE YOUR DATA IF YOU LOOSE YOUR PASSWORD!'}, :class => 'mytooltip'
  .clear
  .group.navform
    = f.submit submit_button_text
